@page "/counter-inrement-deccrement-p"

<div class="container-fluid">
    <h2>Counter with increment/decrement</h2>

    <p>This is an example of cointer with decrement and increment.</p>
</div>
<div class="row m-3">
    <div class="col">
        Step for increment/decrement:
    </div>
    <div class="col">
        <input type="number" class="form-control" id="increment-value"
            placeholder="Enter value for incremenation/decrementation" name="incdec" @bind="IncDecValue"
            @bind:event="oninput">
    </div>
</div>
<div class="row m-3">
    <div class="col">
        <button class="btn btn-success btn-block lm-3 rm-3" @onclick="IncrementCount">Increment</button>
    </div>
    <div class="col">
        <button class="btn btn-primary btn-block lm-3 rm-3" @onclick="DecrementCount">Deccrement</button>
    </div>
    <div class="col">
        <button class="btn btn-danger btn-block lm-3 rm-3" @onclick="ResetCount">Reset</button>
    </div>
</div>
<div class="row m-3">
    <div class="col">
        Current count: <strong> @CurrentCount </strong>
    </div>
</div>

@code {
    [Parameter]
    public int CurrentCount {get; set;} = 0;

    [Parameter]
    public int IncDecValue {get; set;} = 1;

    private void IncrementCount()
    {
        CurrentCount += IncDecValue;
    }

    private void DecrementCount()
    {
        CurrentCount -= IncDecValue;
    }

    private void ResetCount()
    {
        CurrentCount = 0;
    }

}
